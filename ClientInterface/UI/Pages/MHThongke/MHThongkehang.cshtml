@page
@model DoAn.Pages.MHThongke.MHThongkehang
@{
}

<div class="container p-3">
    <h1 class="pt-4">Số lượng hàng trong kho</h1>
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <select class="form-control" asp-for="maLoaihang">
                    @foreach (var loaihang in Model.dsLoaihang)
                    {
                    <option value="@loaihang.Ma"> @loaihang.Ten</option>
                    }
                </select>
            </div>
            <div class="d-flex flex-row justify-content-between">
                <input type="submit" class="form-control" value="Thống kê" />
            </div>
        </div>
        <div class="row">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Mã mặt hàng</th>
                        <th>Tên mặt hàng</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (Mathang, Soluong) in Model.Demsoluongmathangtheoloaihang)
                    {
                    if (Soluong > 0)
                    {
                    <tr>
                        @{ var mathang = Model.Xulymathang.Timkiem(Mathang);}
                        <td width="20%">@mathang.Ma</td>
                        <td width="60%">@mathang.Ten</td>
                        <td width="20%">@Soluong</td>
                    </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
