@page
@model DoAn.Pages.MHMathang.EditModel
@{
}


<div class="container p-3">
    <h1 class="pt-4">Sửa mặt hàng</h1>
    <p class="py-3 text-danger">@Model.ErrorMessage</p>
    <form method="post">
        <div class="row pt-3">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Ma">ID</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Ma" class="form-control" disabled />
                        <span asp-validation-for="Ma" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Ten">Tên</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Ten" class="form-control" />
                        <span asp-validation-for="Ten" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="HanDung">Hạn dùng</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="HanDung" class="form-control" />
                        <span asp-validation-for="HanDung" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="CongTy">Công ty sản xuất</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CongTy" class="form-control" />
                        <span asp-validation-for="CongTy" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="NamSX">Năm sản xuất</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NamSX" class="form-control" />
                        <span asp-validation-for="NamSX" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Loaihang">Loại hàng</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Loaihang">
                            @foreach (var loaihang in Model.dsLoaihang)
                            {
                                <option value="@loaihang.Ma">@loaihang.Ten</option>
                            }
                        </select>
                        <span asp-validation-for="Loaihang" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <div class="row">
                            <div class="col">
                                <input type="submit" class="btn btn-primary w-100" value="OK">
                            </div>
                            <div class="col">
                                <a class="btn btn-primary w-100" asp-page="/MHMathang/Index">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}